  .marker {
    background-image: url('https://cdn.shopify.com/s/files/1/0074/4095/7495/files/favicon_89f87994-4a9b-4d04-a490-0ab317ea795a.png?9138');
    background-size: cover;
    width: 25px;
    height: 25px;
