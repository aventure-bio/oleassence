{% case section.settings.colors %}
  {% when 'white' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--white">
  {% when 'light' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--light">
  {% when 'accent' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--accent">
  {% when 'dark' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--dark">
{% endcase %}

<div class="container">
	<div class="row">
		<div class="homepage-indiv-section-wrapper grid--full homepage-featured-content-wrapper">
			<div class="col-md-12 homepage-featured-rich-text">

				{% if section.settings.title != blank %}
	        <div class="title-bar {{ settings.title-bar-styling }} custom-font">
	        	<h2><span>{{ section.settings.title | escape }}</span></h2>
	        	<div class="clear"></div>
	        </div>
				{% endif %}

				<ul class="homepage-section-social-media {% if section.settings.icon-colors == 'color' %}homepage-section-social-media--color{% else %}homepage-section-social-media--black-and-white{% endif %}">

					{% if settings.sm_facebook_link != blank %}
						<li id="sm-facebook">
							<a href="{{ settings.sm_facebook_link }}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_twitter_link != blank %}
						<li id="sm-twitter">
							<a href="{{settings.sm_twitter_link}}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_instagram_link != blank %}
						<li id="sm-instagram">
							<a href="{{settings.sm_instagram_link}}" target="_blank">
								<span class="fa-stack fa-2x">
									<i class="fas fa-circle fa-stack-2x"></i>
									<i class="fab fa-instagram fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_youtube_link != blank %}
						<li id="sm-youtube">
							<a href="{{settings.sm_youtube_link}}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-youtube fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_vimeo_link != blank %}
						<li id="sm-vimeo">
							<a href="{{settings.sm_vimeo_link}}" target="_blank">
								<span class="fa-stack fa-2x">
									<i class="fas fa-circle fa-stack-2x"></i>
									<i class="fab fa-vimeo fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_flickr_link != blank %}
						<li id="sm-flickr">
							<a href="{{settings.sm_flickr_link}}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-flickr fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_pinterest_link != blank %}
						<li id="sm-pinterest">
							<a href="{{settings.sm_pinterest_link}}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-pinterest fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_google_plus_link != blank %}
						<li id="sm-google-plus">
							<a href="{{settings.sm_google_plus_link}}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-google-plus-g fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_snapchat_link != blank %}
						<li id="sm-snapchat">
							<a href="{{settings.sm_snapchat_link}}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-snapchat fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_houzz_link != blank %}
						<li id="sm-houzz">
							<a href="{{settings.sm_houzz_link}}" target="_blank">
								<span class="fa-stack fa-2x">
									<i class="fas fa-circle fa-stack-2x"></i>
									<i class="fab fa-houzz fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_tumblr_link != blank %}
						<li id="sm-tumblr">
							<a href="{{settings.sm_tumblr_link}}" target="_blank">
								<span class="fa-stack fa-2x">
								  <i class="fas fa-circle fa-stack-2x"></i>
								  <i class="fab fa-tumblr fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

					{% if settings.sm_linkedin_link != blank %}
						<li id="sm-linkedin">
							<a href="{{settings.sm_linkedin_link}}" target="_blank">
								<span class="fa-stack fa-2x">
									<i class="fas fa-circle fa-stack-2x"></i>
									<i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					{% endif %}

				</ul>
			</div>
		</div>
	</div>
</div>
</div>

{% schema %}
{
  "name": "Social media icons",
  "class": "homepage-section--social-media-wrapper wow fadeIn",
  "settings": [
		{
			"type": "select",
			"id": "colors",
			"label": "Color scheme",
			"default": "white",
			"options": [
				{
					"value": "white",
					"label": "White"
				},
				{
					"value": "light",
					"label": "Light"
				},
				{
					"value": "accent",
					"label": "Feature"
				},
				{
					"value": "dark",
					"label": "Dark"
				}
			],
			"info": "The colors in each 'scheme' can be changed in the 'General settings' > 'Colors' section of your admin"
		},
		{
			"type": "paragraph",
			"content": "Edit your social settings and accounts in General settings"
		},
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Follow us..."
    },
		{
        "type":      "select",
        "id":        "icon-colors",
        "label":     "Icons",
        "options": [
          {
            "value": "color",
            "label": "Color"
          },
          {
            "value": "blackandwhite",
            "label": "Section colors"
          }
        ],
        "default":   "color"
			}
  ],
  "presets": [
    {
      "name": "Social media icons",
      "category": "Social media"
    }
  ]
}
{% endschema %}
